---
import Base from "../layouts/Base.astro";

// Example mock data (replace with actual data source or props)
const newsItems = [
  {
    title: "Sample Title 1",
    date: "2024-11-22",
    content: "This is the content of the first news item.",
  },
  {
    title: "Sample Title 2",
    date: "2024-11-21",
    content: "This is the content of the second news item.",
  },
];
---

<Base title="News">
  <div class="container">
    <h2><span>News</span></h2>
    <ul>
      {
        newsItems.map((item) => (
          <li>
            <article>
              <h3>{item.title}</h3>
              <time datetime={item.date}>{item.date}</time>
              <div class="md">{item.content}</div>
            </article>
          </li>
        ))
      }
    </ul>
  </div>
</Base>

<style>
  li:has(+ li) {
    border-bottom: solid grey 1px;
    padding-bottom: var(--sp-l);
    margin-bottom: var(--sp-xl);
  }

  h3 {
    margin-bottom: var(--sp-2xs);
  }

  time {
    display: block;
    margin-bottom: var(--sp-l);
  }
</style>
